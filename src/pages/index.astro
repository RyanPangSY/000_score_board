---
import '../styles/global.css';
import { addScore, getScores, setGameDuration, getGameTime, getShotClock, getHalfCourt, startGame, stopGame, resetGame, startShotClock, stopShotClock, resetShotClock, getMatchHistory, clearMatchHistory, getTeamNames } from '../scripts/scoreboard.ts';

// Format time with milliseconds
function splitTime(seconds: number): { mmss: string; ms: string } {
  const minutes = Math.floor(seconds / 60);
  const secs = Math.floor(seconds % 60);
  const millis = Math.floor((seconds % 1) * 1000);
  return {
    mmss: `${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`,
    ms: `.${millis.toString().padStart(3, '0')}`,
  };
}

const { red, blue } = getScores();
const gameTime = getGameTime();
const shotClock = getShotClock();
const halfCourt = getHalfCourt();
const { redTeamName, blueTeamName } = getTeamNames();
const matchHistory = getMatchHistory();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scoreboard</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
  <style>
    body {
      margin: 0 10% 0 10%;
    }
    body, .font-montserrat {
      font-family: 'Montserrat', Arial, sans-serif;
    }
    .timer-fixed {
      display: inline-block;
      min-width: 6ch;
      text-align: right;
      letter-spacing: 0.05em;
    }
    .timer-ms {
      display: inline-block;
      min-width: 4ch;
      text-align: left;
      font-variant-numeric: tabular-nums;
    }
    .font-robotomono {
      font-family: "Major Mono Display", monospace;
      font-weight: 400;
      font-style: normal;
    }
    .disabled {
      opacity: 0.5;
      pointer-events: none;
    }
    .team-title {
      font-weight: bold;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }
    .score-big {
      font-weight: bold;
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .team-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      padding: 1.2rem 0.5rem;
      min-width: 0;
    }
    .score-controls {
      margin-top: 1rem;
      display: flex;
      gap: 0.5rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    .team-select {
      margin-bottom: 0.5rem;
      width: 100%;
      max-width: 200px;
    }
    .container {
      padding: 0.5rem;
      max-width: 100vw;
    }
    button {
      min-width: 44px;
      min-height: 44px;
      font-size: 1rem;
    }
    table {
      font-size: 0.95rem;
    }
    /* Responsive: stack teams vertically on mobile */
    @media (max-width: 768px) {
      main {
        margin: 0 0 0 0;
      }
      .w-full.flex.md\:flex-row {
        flex-direction: column !important;
        gap: 1.5rem !important;
      }
      .team-section {
        padding: 1rem 0.2rem;
      }
      .score-big {
        font-size: 2.2rem;
      }
      .team-title {
        font-size: 1rem;
      }

    }
    /* Make table scrollable on mobile */
    .match-history-table-wrapper {
      overflow-x: auto;
      width: 100%;
    }
    table {
      min-width: 600px;
    }
    /* Settings modal styles */
    #settings-modal {
      display: flex;
      pointer-events: none;
    }
    #settings-modal.visible {
      opacity: 1;
      pointer-events: auto;
    }
    #settings-modal:not(.visible) {
      opacity: 0;
      pointer-events: none;
    }
    #countdown-time-input, #reconfig-time-input {
      color: black;
    }
  </style>
</head>
<body class="bg-gray-900 text-white font-montserrat">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl text-center mb-6">Scoreboard</h1>

    <!-- Upper part: Timers and controls -->
    <div class="w-full mb-6 flex flex-col items-center">
      <div class="flex flex-col items-center gap-2">
        <h2 class="text-1xl mb-0">Game Timer:</h2>
        <div class="flex flex-col items-center">
          <p id="game-timer" class="text-7xl font-robotomono font-normal text-center mb-2">
          <strong>
            <span style="letter-spacing: -2mm;" class="timer-fixed" id="game-timer-mmssms">{splitTime(gameTime)}</span>
          </strong>
          </p>
          <h3 class="text-1xl mt-4 mb-2" id="shot-clock-label">Shot Clock:</h3>
          <p class="text-5xl font-robotomono text-center mb-2">
          <strong>
            <span style="letter-spacing: -1.5mm;" class="timer-fixed" id="shot-clock-mmssms">{splitTime(shotClock)}</span>
          </strong>
          </p>
          <h3 class="text-1xl mt-4 mb-2" id="shot-clock-label">8s Half Court:</h3>
          <p class="text-4xl font-robotomono text-center mb-2">
          <strong>
            <span style="letter-spacing: -1mm;" class="timer-fixed" id="half-court-clock-mmssms">{splitTime(halfCourt)}</span>
          </strong>
          </p>
        </div>
      </div>
      <div class="mt-4 flex flex-wrap justify-center gap-3">
        <button id="toggle-game"
          class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
          Start Game
        </button>
        <button id="reset-game" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded">Reset Game</button>
        <button id="toggle-shot" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Start Shot Clock</button>
        <button id="reset-shot" class="bg-blue-300 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded">Reset Shot Clock</button>
        <button id="pass-half-court" class="bg-purple-500 hover:bg-purple-600 text-white font-bold py-2 px-4 rounded block">Pass Half Court</button>
        <button id="settings" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded block">Settings</button>
      </div>
      <div class="mt-4">
        <select id="game-duration" class="bg-gray-800 text-white p-2 rounded">
          <option value="120">Preliminary (120s)</option>
          <option value="160">Knockout (160s)</option>
        </select>
      </div>
    </div>
    
    <!-- Show half court status -->
    <div id="half-court-status" class="font-bold text-center text-1xl my-4"></div>

    <!-- Lower part: Teams (left and right) -->
    <div class="w-full flex flex-col md:flex-row gap-8">
      <!-- Left: Red Team -->
      <div class="flex-1 text-center bg-robocon-red rounded-lg team-section">
        <select id="red-team-name" class="bg-gray-800 text-white p-2 rounded team-select">
          <option value="Lebron James" selected={redTeamName === 'Lebron James'}>Lebron James</option>
          <option value="Michael Jordan" selected={redTeamName === 'Michael Jordan'}>Michael Jordan</option>
        </select>
        <h2 id="red-team-title" class="team-title">{redTeamName}</h2>
        <p id="red-score" class="score-big">{red}</p>
        <div class="score-controls">
          <button data-team="red" data-points="0" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Rcfg</button>
          <button data-team="red" data-points="2" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+2</button>
          <button data-team="red" data-points="3" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+3</button>
          <button data-team="red" data-points="7" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+7</button>
        </div>
        <!-- 犯規區塊：橫向排列 -->
        <div class="foul-section mt-8 mb-2 flex flex-row justify-center gap-12">
          <div class="flex flex-col items-center">
            <span class="font-bold mb-2">Andy</span>
            <div>
              <button id="foul-minus-Andy" class="bg-gray-700 px-2 rounded">-1</button>
              <span id="foul-count-Andy" class="ml-2 mr-2 text-2xl font-robotomono font-normal">0</span>
              <button id="foul-plus-Andy" class="bg-gray-700 px-2 rounded">+1</button>
            </div>
          </div>
          <div class="flex flex-col items-center">
            <span class="font-bold mb-2">Philip</span>
            <div>
              <button id="foul-minus-Philip" class="bg-gray-700 px-2 rounded">-1</button>
              <span id="foul-count-Philip" class="ml-2 mr-2 text-2xl font-robotomono font-normal">0</span>
              <button id="foul-plus-Philip" class="bg-gray-700 px-2 rounded">+1</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Right: Blue Team -->
      <div class="flex-1 text-center bg-robocon-blue rounded-lg team-section">
        <select id="blue-team-name" class="bg-gray-800 text-white p-2 rounded team-select">
          <option value="Lebron James" selected={blueTeamName === 'Lebron James'}>Lebron James</option>
          <option value="Michael Jordan" selected={blueTeamName === 'Michael Jordan'}>Michael Jordan</option>
        </select>
        <h2 id="blue-team-title" class="team-title">{blueTeamName}</h2>
        <p id="blue-score" class="score-big">{blue}</p>
        <div class="score-controls">
          <button data-team="blue" data-points="0" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Rcfg</button>
          <button data-team="blue" data-points="2" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+2</button>
          <button data-team="blue" data-points="3" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+3</button>
          <button data-team="blue" data-points="7" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">+7</button>
        </div>
        <!-- 犯規區塊：橫向排列 -->
        <div class="foul-section mt-8 mb-2 flex flex-row justify-center gap-12">
          <div class="flex flex-col items-center">
            <span class="font-bold mb-2">Ryan</span>
            <div>
              <button id="foul-minus-Ryan" class="bg-gray-700 px-2 rounded">-1</button>
              <span id="foul-count-Ryan" class="ml-2 mr-2 text-2xl font-robotomono font-normal">0</span>
              <button id="foul-plus-Ryan" class="bg-gray-700 px-2 rounded">+1</button>
            </div>
          </div>
          <div class="flex flex-col items-center">
            <span class="font-bold mb-2">Henry</span>
            <div>
              <button id="foul-minus-Henry" class="bg-gray-700 px-2 rounded">-1</button>
              <span id="foul-count-Henry" class="ml-2 mr-2 text-2xl font-robotomono font-normal">0</span>
              <button id="foul-plus-Henry" class="bg-gray-700 px-2 rounded">+1</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Match History -->
    <div class="mt-10">
      <h2 class="text-2xl text-center mb-4">Match History</h2>
      <div class="match-history-table-wrapper">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-gray-800">
              <th class="p-2">Timestamp</th>
              <th class="p-2">Red Team</th>
              <th class="p-2">Red Score</th>
              <th class="p-2">Blue Team</th>
              <th class="p-2">Blue Score</th>
              <th class="p-2">Time Used</th>
              <th class="p-2">Ended By</th>
            </tr>
          </thead>
          <tbody id="match-history">
            {matchHistory.map(record => (
              <tr class="border-b border-gray-700">
                <td class="p-2">{new Date(record.timestamp).toLocaleString()}</td>
                <td class="p-2">{record.redTeamName}</td>
                <td class="p-2">{record.redScore}</td>
                <td class="p-2">{record.blueTeamName}</td>
                <td class="p-2">{record.blueScore}</td>
                <td class="p-2">{record.timeUsed ? record.timeUsed : ''}</td>
                <td class="p-2">{record.endedBy ? record.endedBy : ''}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      <button id="clear-history" class="mt-4 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Clear History</button>
      <button id="export-history" class="mt-4 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Export CSV</button>
    </div>
  </div>
  <div id="settings-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden transition-opacity duration-300 opacity-0">
    <div class="bg-gray-800 rounded-lg p-6 w-80 shadow-lg">
      <h2 class="text-xl font-bold mb-4">Settings</h2>
      <div class="mb-4">
        <label class="block mb-1 font-semibold">Countdown Time (s):</label>
        <input id="countdown-time-input" type="number" min="1" max="99" value="10" class="w-full border rounded px-2 py-1" />
      </div>
      <div class="mb-4">
        <label class="block mb-1 font-semibold">Reconfiguration Time (s):</label>
        <input id="reconfig-time-input" type="number" min="1" max="99" value="10" class="w-full border rounded px-2 py-1" />
      </div>
      <div class="flex justify-end gap-2">
        <button id="settings-save" class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">Save</button>
        <button id="settings-cancel" class="bg-red-500 px-4 py-1 rounded hover:bg-red-600">Cancel</button>
      </div>
    </div>
  </div>
  <script type="module" src="/000_score_board/bundle.js"></script>
</body>
</html>